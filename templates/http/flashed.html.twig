{% extends 'base.html.twig' %}

{% block body %}
    {#
    les messages flashs sont accessibles par la m√©thode getFlashBag()
    de la session (en notation courte : app.session.flashBag)
    #}
{#    {{ dump(app.session.flashBag.all) }}#}

    {#
    afficher les types de messages avec les messages qu'ils contiennent
    en dessous
    #}
    {% for type, messages in app.session.flashBag.all %}
        <strong>{{ type }}</strong><br>
        {% for message in messages %}
            {{ message }}<br>
        {% endfor %}
    {% endfor %}
{% endblock %}
